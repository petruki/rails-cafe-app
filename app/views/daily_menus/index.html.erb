<h1>Daily Menu</h1>

<% Category.all.each do |category| %>
    <% if category_in_use(category.id) %>
    <h3><%= category.name %></h3>
    <table class="table">
        <tr>
            <th>Course</th>
            <th>Volume</th>
            <th>Price</th>
        </tr>
        <% get_items_by_category(@current_daily_menu.id, category.id).each do |item| %>
            <tr>
                <td><%= item.name %></td>
                <td><%= item.volume %></td>
                <td><%= item.price %></td>
            </tr>
        <% end %>
    </table>
    <br/>
    <% end %>
<% end %>